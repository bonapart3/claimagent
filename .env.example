.env.example
bash
# =============================================================================
# ClaimAgent™ Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Application Settings
# -----------------------------------------------------------------------------
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api
APP_NAME=ClaimAgent™
APP_VERSION=3.0.0

# -----------------------------------------------------------------------------
# Database Configuration
# -----------------------------------------------------------------------------
# PostgreSQL (Primary)
DATABASE_URL="postgresql://user:password@localhost:5432/claimagent?schema=public"

# Cloudflare D1 (Alternative)
# CLOUDFLARE_ACCOUNT_ID=your_account_id
# CLOUDFLARE_DATABASE_ID=your_database_id
# CLOUDFLARE_API_TOKEN=your_api_token

# Database Pool Settings
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_TIMEOUT=30000

# -----------------------------------------------------------------------------
# Authentication & Security
# -----------------------------------------------------------------------------
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-min-32-chars-change-in-production

# Session Configuration
SESSION_MAX_AGE=2592000
SESSION_UPDATE_AGE=86400

# JWT Settings
JWT_SECRET=your-jwt-secret-key-change-in-production
JWT_EXPIRATION=7d

# Encryption Keys
ENCRYPTION_KEY=your-32-character-encryption-key-here
ENCRYPTION_ALGORITHM=aes-256-gcm

# Password Requirements
PASSWORD_MIN_LENGTH=12
PASSWORD_REQUIRE_UPPERCASE=true
PASSWORD_REQUIRE_LOWERCASE=true
PASSWORD_REQUIRE_NUMBERS=true
PASSWORD_REQUIRE_SYMBOLS=true

# -----------------------------------------------------------------------------
# AI & ML Services
# -----------------------------------------------------------------------------
# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-org-id
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.2

# Anthropic Claude (Alternative)
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
# ANTHROPIC_MODEL=claude-3-opus-20240229

# Damage Analysis Model
DAMAGE_ANALYSIS_MODEL=gpt-4-vision-preview
DAMAGE_ANALYSIS_MAX_TOKENS=2048

# Fraud Detection Model
FRAUD_MODEL_ENDPOINT=https://ml.claimagent.io/fraud/v1
FRAUD_MODEL_API_KEY=your-fraud-model-api-key
FRAUD_THRESHOLD=50

# -----------------------------------------------------------------------------
# External API Integrations
# -----------------------------------------------------------------------------
# Valuation API (CCC, Mitchell, Audatex)
VALUATION_API_URL=https://api.valuation-provider.com
VALUATION_API_KEY=your-valuation-api-key
VALUATION_API_SECRET=your-valuation-api-secret
VALUATION_TIMEOUT=10000

# Salvage API
SALVAGE_API_URL=https://api.salvage-provider.com
SALVAGE_API_KEY=your-salvage-api-key

# VIN Decoder API
VIN_DECODER_API_URL=https://vpic.nhtsa.dot.gov/api
VIN_DECODER_CACHE_TTL=86400

# Telematics API
TELEMATICS_API_URL=https://api.telematics-provider.com
TELEMATICS_API_KEY=your-telematics-api-key

# State Regulations API
STATE_REGS_API_URL=https://api.state-regulations.com
STATE_REGS_API_KEY=your-state-regs-api-key
STATE_REGS_CACHE_TTL=3600

# Police Report Integration
POLICE_REPORT_API_URL=https://api.police-reports.com
POLICE_REPORT_API_KEY=your-police-report-api-key

# Medical Records API
MEDICAL_RECORDS_API_URL=https://api.medical-records.com
MEDICAL_RECORDS_API_KEY=your-medical-records-api-key

# -----------------------------------------------------------------------------
# Payment Processing
# -----------------------------------------------------------------------------
# Stripe
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ACH/Wire Transfer
ACH_ROUTING_NUMBER=your-routing-number
ACH_ACCOUNT_NUMBER=your-account-number

# -----------------------------------------------------------------------------
# File Storage
# -----------------------------------------------------------------------------
# AWS S3
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=claimagent-documents
AWS_S3_UPLOAD_LIMIT=10485760

# Cloudflare R2 (Alternative)
# R2_ACCOUNT_ID=your-r2-account-id
# R2_ACCESS_KEY_ID=your-r2-access-key
# R2_SECRET_ACCESS_KEY=your-r2-secret-key
# R2_BUCKET=claimagent-documents

# Local Storage (Development Only)
UPLOAD_DIR=./uploads
UPLOAD_MAX_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx

# -----------------------------------------------------------------------------
# Email & Notifications
# -----------------------------------------------------------------------------
# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@claimagent.io
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@claimagent.io
EMAIL_FROM_NAME=ClaimAgent™

# SendGrid (Alternative)
# SENDGRID_API_KEY=SG.your-sendgrid-api-key

# SMS Notifications (Twilio)
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+15551234567

# Push Notifications (Firebase)
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=firebase-adminsdk@your-project.iam.gserviceaccount.com

# -----------------------------------------------------------------------------
# Monitoring & Analytics
# -----------------------------------------------------------------------------
# Sentry Error Tracking
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
SENTRY_ORG=your-org
SENTRY_PROJECT=claimagent
SENTRY_AUTH_TOKEN=your-sentry-auth-token

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# LogRocket Session Replay
LOGROCKET_APP_ID=your-logrocket-app-id

# DataDog APM
DATADOG_API_KEY=your-datadog-api-key
DATADOG_APP_KEY=your-datadog-app-key
DATADOG_SITE=datadoghq.com

# -----------------------------------------------------------------------------
# Rate Limiting & Security
# -----------------------------------------------------------------------------
RATE_LIMIT_WINDOW=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL=true

# DDoS Protection
DDOS_PROTECTION_ENABLED=true
DDOS_MAX_REQUESTS_PER_IP=1000

# CORS Settings
CORS_ORIGIN=http://localhost:3000,https://claimagent.io,https://veridicus.io
CORS_CREDENTIALS=true

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FEATURE_AUTO_APPROVAL=true
FEATURE_FRAUD_DETECTION=true
FEATURE_AI_DAMAGE_ANALYSIS=true
FEATURE_TELEMATICS=false
FEATURE_MOBILE_APP=false
FEATURE_MULTI_LANGUAGE=false

# Auto-Approval Settings
AUTO_APPROVAL_MAX_AMOUNT=2500
AUTO_APPROVAL_MIN_CONFIDENCE=0.80
AUTO_APPROVAL_EXCLUDE_BI=true
AUTO_APPROVAL_EXCLUDE_TOTAL_LOSS=true

# -----------------------------------------------------------------------------
# Cache Configuration
# -----------------------------------------------------------------------------
# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password
REDIS_TLS=false

# Cache TTL Settings (seconds)
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=3600
CACHE_TTL_LONG=86400

# -----------------------------------------------------------------------------
# Regulatory Compliance
# -----------------------------------------------------------------------------
# State-Specific Settings
DEFAULT_STATE=CA
SUPPORTED_STATES=AL,AK,AZ,AR,CA,CO,CT,DE,FL,GA,HI,ID,IL,IN,IA,KS,KY,LA,ME,MD,MA,MI,MN,MS,MO,MT,NE,NV,NH,NJ,NM,NY,NC,ND,OH,OK,OR,PA,RI,SC,SD,TN,TX,UT,VT,VA,WA,WV,WI,WY

# Total Loss Thresholds (by state)
TOTAL_LOSS_THRESHOLD_CA=0.75
TOTAL_LOSS_THRESHOLD_TX=1.00
TOTAL_LOSS_THRESHOLD_FL=0.80
TOTAL_LOSS_THRESHOLD_NY=0.75

# Compliance Logging
COMPLIANCE_LOG_LEVEL=info
COMPLIANCE_LOG_RETENTION_DAYS=2555

# -----------------------------------------------------------------------------
# Testing & Development
# -----------------------------------------------------------------------------
# Test Environment
TEST_DATABASE_URL="postgresql://test:test@localhost:5432/claimagent_test?schema=public"
TEST_OPENAI_API_KEY=sk-test-key
TEST_MODE=false

# Mock Services (for testing)
MOCK_VALUATION_API=false
MOCK_FRAUD_API=false
MOCK_PAYMENT_API=false

# Debugging
DEBUG=false
LOG_LEVEL=info
VERBOSE_LOGGING=false

# -----------------------------------------------------------------------------
# Deployment Configuration
# -----------------------------------------------------------------------------
VERCEL_URL=https://claimagent.vercel.app
PRODUCTION_URL=https://claimagent.io
STAGING_URL=https://staging.claimagent.io

# CDN Configuration
CDN_URL=https://cdn.claimagent.io
STATIC_ASSETS_URL=https://static.claimagent.io

# Build Settings
NEXT_TELEMETRY_DISABLED=1
ANALYZE=false

# -----------------------------------------------------------------------------
# Health Checks & Monitoring
# -----------------------------------------------------------------------------
HEALTH_CHECK_ENDPOINT=/api/health
HEALTH_CHECK_INTERVAL=30000
UPTIME_MONITOR_URL=https://status.claimagent.io

# -----------------------------------------------------------------------------
# Support & Documentation
# -----------------------------------------------------------------------------
SUPPORT_EMAIL=support@claimagent.io
DOCS_URL=https://docs.claimagent.io
STATUS_PAGE_URL=https://status.claimagent.io

# =============================================================================
# END OF CONFIGURATION
# =============================================================================
# Remember to:
# 1. Copy this file to .env
# 2. Fill in all required values
# 3. Never commit .env to version control
# 4. Rotate secrets regularly
# 5. Use different credentials for production
# 